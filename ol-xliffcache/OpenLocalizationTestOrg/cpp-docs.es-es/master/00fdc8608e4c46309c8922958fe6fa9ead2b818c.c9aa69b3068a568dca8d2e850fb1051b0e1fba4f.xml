n                 omp_get_thread_num(), i);  \n  \n    #pragma omp parallel reduction()   // C3021  \n      ;  \n  \n    #pragma omp parallel reduction(+ :)   // C3021  \n      ;  \n  \n    //   \n    // The following shows correct syntax examples.  \n    //  \n    #pragma omp parallel reduction(+ : x, y)  \n      ;  \n  \n    #pragma omp parallel reduction(* : x, y)  \n      ;  \n  \n    #pragma omp parallel reduction(- : x, y)  \n      ;  \n  \n    #pragma omp parallel reduction(& : x, y)  \n      ;  \n  \n    #pragma omp parallel reduction(^ : x, y)  \n      ;  \n  \n    #pragma omp parallel reduction(| : x, y)  \n      ;  \n  \n    #pragma omp parallel reduction(&& : x, y)  \n      ;  \n  \n    #pragma omp parallel reduction(|| : x, y)  \n      ;  \n}  \n```"}