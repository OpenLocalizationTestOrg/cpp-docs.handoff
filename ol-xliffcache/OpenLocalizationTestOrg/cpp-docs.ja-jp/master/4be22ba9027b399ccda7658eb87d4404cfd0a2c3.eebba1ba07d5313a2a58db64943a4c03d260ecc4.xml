ragma omp parallel  \n   {  \n      ++n2;  \n  \n      #pragma omp sections  \n         ++n2;   // C3045  \n  \n      #pragma omp sections   // OK  \n      {  \n         ++n3;  \n      }  \n   }  \n}  \n```"}